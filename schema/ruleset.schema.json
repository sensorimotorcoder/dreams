{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "TextCoder Ruleset Preset",
  "type": "object",
  "required": ["meta"],
  "properties": {
    "meta": {
      "type": "object",
      "required": ["name", "version"],
      "properties": {
        "name": {"type": "string", "minLength": 1},
        "version": {"type": "string", "minLength": 1},
        "description": {"type": "string"},
        "engine_min_version": {"type": "string"},
        "categories": {
          "type": "array",
          "items": {"type": "string"}
        }
      },
      "additionalProperties": true
    },
    "lexicons": {
      "type": "object",
      "patternProperties": {
        "^[A-Za-z0-9_.-]+$": {
          "type": "array",
          "items": {"type": "string"}
        }
      },
      "additionalProperties": true
    },
    "exceptions": {
      "type": "object",
      "patternProperties": {
        "^[A-Za-z0-9_.-]+$": {
          "type": "array",
          "items": {"type": "string"}
        }
      },
      "additionalProperties": true
    },
    "config": {
      "type": "object",
      "additionalProperties": true
    },
    "notes": {
      "type": "array",
      "items": {"type": "string"}
    }
  },
  "additionalProperties": true
}
